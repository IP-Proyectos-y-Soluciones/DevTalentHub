<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://fonts.googleapis.com/css?family=Rubik:400,700,900"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/trix.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <title>{{namePage}}</title>
  </head>
  <body>
    
    <div class="nombre-sitio contenedor">
      <h1>
        <a href="/">DevTalentHub</a>
      </h1>

      {{#if bar}}
        <div class="buscador">
          <form action="/search" method="POST">
            <input type="text" name="q" class="buscar">
            <input type="submit" value="Buscar">
          </form>
        </div>
      {{/if}}

      {{#if logOut}}
        <div class="cerrar-sesion">
          <p>Hola! {{name}}</p>
          {{#if imagen}}
            <img src="/uploads/profiles/{{image}}" class="admin-perfil">
          {{/if}}
          <a href="/administration">Administración</a>
          <a href="/log-out">Cerrar Sesión</a>
        </div>
      {{/if}}
    </div>

    <header class="site-header contenedor separador">
      <h2>{{namePage}}</h2>
      {{#if tagline}}
        <p class="tagline">{{tagline}}</p>
      {{/if}}

      {{#if boton}}
        <a href="/vacancies/new" class="btn btn-azul">Publicar Nueva Vacante</a>
      {{/if}}
    </header>
    
    <div class="contenido-principal contenedor">
      {{#if messages}}
        <div class="alertas">
          {{#showAlerts messages}}
            <li>do</li>
          {{/showAlerts}}
      {{/if}}
      {{{body}}}
    </div>
      

    </body>
  </body>
</html>